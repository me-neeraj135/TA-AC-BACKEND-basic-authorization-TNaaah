<!-- @format -->

<% include partial/header %>
<main class="padding-top">
  <%if(articles.length>0){%>

  <h2 class="secondary-heading text-center padding-top">all articles</h2>
  <%}%>
  <section
    class="articles-section container height padding-top flex flex-wrap-yes justify-evenly"
  >
    <%if(articles.length>0){%> <% articles.forEach(elm=>{%>

    <article class="flex-48">
      <h3 class="tertiary-heading"><%= elm.title %></h3>
      <p class="para padding-t-b"><%= elm.description.slice(0,500) %></p>
      <div class="flex justify-between align-center">
        <div>
          <button class="btn btn-primary">
            <a href="/articles/<%= elm.id %>">details</a>
          </button>
        </div>
        <div class="flex align-center">
          <span>👍:<%= elm.like.length %></span>
          <span>👎:<%= elm.dislike.length %></span>
        </div>
      </div>
    </article>
    <%})%> <%}else{%>
    <h2 class="secondary-heading text-center">no articles</h2>
    <%}%>
  </section>
</main>

<% include partial/footer %>
